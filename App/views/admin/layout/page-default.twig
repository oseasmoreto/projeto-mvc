{% extends "admin/layout/layout.twig" %}

{% block title %}{{titulo}}{% endblock %}

{% block body %}
<section class="content">

    <div class="row">
        <div class="col-lg-12 mb-3" style="display: flex;">
            <div class="input-group" style="justify-content: end;">
                <button title="Cadastrar" onclick="redirect('{{routePage}}/form')" type="button" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="hidden-label-round-controls">{{titulo}}</h4>
                    <a class="heading-elements-toggle">
                        <i class="la la-ellipsis-v font-medium-3"></i>
                    </a>
                </div>
                <div class="card-content collpase show">
                    <div class="card-body">
                        {% block page %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}