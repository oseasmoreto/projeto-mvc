{% extends "admin/layout/partials/form-skeleton.twig" %}

{% block form %}
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label for="Página">Página</label>
                <input type="text" required  name="title" title="Página" value="{{dados.title}}" class="form-control round" placeholder="Digite aqui sua Página">
            </div>
        </div>
    
        <div class="col-lg-4">
            <div class="form-group">
                <label for="Página">URL da página</label>
                <input type="text" name="page" title="URL da página" value="{{dados.page}}" class="form-control round" placeholder="Digite aqui a URL da página">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label for="Alias">Alias</label>
                <input type="text" name="alias" title="Alias" value="{{dados.alias}}" class="form-control round" placeholder="Alias">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label>icon</label>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i id="mostraicone" class="{{dados.icon}}"></i></span>
                    </div>
                    <input type="text" required  onblur="trocaicone(this.value)" id="icone" name="icon" class="form-control" placeholder="Digite aqui o icon Ex. fa fa-user" value="{{dados.icon}}">
                </div>
                <!-- /.input group -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Página">Ordem</label>
                <input min='0' type="number" required  name="order" title="Ordem" value="{{dados.order}}" class="form-control round" placeholder="Digite aqui a Ordem">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Nivel">Nivel</label>
                <select class="form-control round" name="level" id="input4">
                    <option {% if dados.level == '' %}selected{% endif %} value="0">Nível Principal</option>
                    {% for nivel in niveis %}
                        <option {% if dados.level == nivel.idmenu %}selected{% endif %} value="{{nivel.idmenu}}">{{nivel.title}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label d-none d-sm-block">Grupos:</label>
        <div class="col-sm-10">
            {% for grupo in grupos %}
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" name="groups[]" {{grupo.checked}} class="custom-control-input" id="customCheck{{grupo.idgroup}}" value="{{grupo.idgroup}}">
                    <label class="custom-control-label" for="customCheck{{grupo.idgroup}}">{{grupo.description}}</label>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label d-none d-sm-block">Ativo:</label>
        <div class="col-sm-10">
            <div class="custom-control custom-radio">
                <input type="radio" name="status" id="status" value="a" {% if dados.status == 'a' %}checked{% endif %} class="custom-control-input">
                <label class="custom-control-label" for="status">Sim</label>
            </div>
            <div class="custom-control custom-radio">
                <input type="radio" name="status" id="status2" value="i" {% if dados.status == 'i' %}checked{% endif %} class="custom-control-input">
                <label class="custom-control-label" for="status2">Não</label>
            </div>
        </div>
    </div>
    <input type="hidden" name="idmenu" value="{{dados.idmenu}}" />
{% endblock %}