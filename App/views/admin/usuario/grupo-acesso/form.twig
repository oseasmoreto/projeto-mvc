{% extends "admin/layout/partials/form-skeleton.twig" %}

{% block form %}
    <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="Descrição">Descrição</label>
                    <input type="text" required  name="description" title="Descrição" value="{{dados.description}}" class="form-control round" placeholder="Digite aqui sua Descrição">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label d-none d-sm-block">Menus:</label>
            <div class="col-sm-10">
                {% for menu in menus %}
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" name="menus[]" {{menu.checked}} class="custom-control-input" id="customCheck{{menu.idmenu}}" value="{{menu.idmenu}}">
                        <label class="custom-control-label" for="customCheck{{menu.idmenu}}">{{menu.title}}</label>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label d-none d-sm-block">Ativo:</label>
            <div class="col-sm-10">
                <div class="custom-control custom-radio">
                    <input type="radio" name="status" id="status" value="a" {% if dados.status == 'a' %}checked{% endif %} class="custom-control-input">
                    <label class="custom-control-label" for="status">Sim</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" name="status" id="status2" value="i" {% if dados.status == 'i' %}checked{% endif %} class="custom-control-input">
                    <label class="custom-control-label" for="status2">Não</label>
                </div>
            </div>
        </div>
        <input type="hidden" name="idgroup" value="{{dados.idgroup}}" />
{% endblock %}